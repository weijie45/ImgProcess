<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>

        .PreviewImgModal {
            display: none;
            align-items: center;
            justify-content: center;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background-color: rgba(0,0,0,0.9);
            text-align: center;
        }

            .PreviewImgModal img {
                max-height: 90%;
                max-width: 90%;
            }

                .PreviewImgModal img.border {
                    border-radius: 3px;
                    border: 4px solid #fff;
                }

            .PreviewImgModal.show {
                display: flex;
            }

        /* The Close Button */
        .close {
            color: #aaa;
            font-size: 28px;
            font-weight: bold;
            position: absolute;
            top: 0;
            text-align: right;
            width: 100%;
            padding-right: 1rem;
        }

            .close:hover,
            .close:focus {
                color: white;
                text-decoration: none;
                cursor: pointer;
            }

        .bottom {
            color: #fff;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

        .loading-modal {
            display: none;
            position: fixed;
            z-index: 5;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background-color: rgba(238, 238, 238, 0.79);
            align-items: center;
            justify-content: center;
            text-align: center;
        }

            .loading-modal div {
                border: 1px solid black;
                padding: 10px;
                background-color: white;
                font-size: 20px;
            }

                .loading-modal div img,
                .loading-modal div span {
                    vertical-align: middle;
                }

        body.loading {
            overflow: hidden;
        }

            body.loading .loading-modal {
                display: flex;
            }

        .progressbar {
            border-radius: 13px;
            padding: 3px;
            border: 1px solid #444;
            margin: 1rem 0;
        }

            .progressbar > div {
                background-color: #dc3545;
                width: 0%;
                height: 15px;
                border-radius: 10px;
                background-image: linear-gradient(45deg,rgba(255,255,255,.15) 25%,transparent 25%,transparent 50%,rgba(255,255,255,.15) 50%,rgba(255,255,255,.15) 75%,transparent 75%,transparent);
                background-size: 1rem 1rem;
                color: #fff;
                font-weight: bolder;
            }



        /* Table */

        .table-responsive {
            overflow: auto;
        }

        .table {
            width: 100%;
            max-width: 100%;
            box-shadow: 4px 4px 9px 0px rgba(0, 0, 0, 0.1);
            -moz-box-shadow: 4px 4px 9px 0px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }

            .table thead tr, .table thead tr th,
            .table tbody tr, .table tbody tr td {
                padding: 0.5em;
                text-align: center;
                white-space: nowrap;
            }


        .table-striped tbody tr:nth-child(2n+1) {
            background-color: #fff6fa;
        }


        .table-hover tbody tr:hover {
            background-color: #f53163; /* #d90472; */
            color: white;
        }

        .table-border td, .table-border th {
            border: 1px solid #ddd;
            padding: 8px;
        }
    </style>
</head>
<body>

    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year </p>
        </footer>
    </div>

    <div class="PreviewImgModal">
        <div class="close">&times;</div>
        <img src="..\Image\EllipsisLoading.gif" class="loaded" style="vertical-align:middle;position: absolute; z-index: 2;">
        <div class="bottom">
            <p>檔名</p>
        </div>
    </div>

    <div class="loading-modal">
        <div>
            <img src="..\Image\Loading.gif" style="vertical-align:middle;">
            <span id="loading-msg"></span>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")

    <script type="text/javascript" src="~/Scripts/layer/layer.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <script type="text/javascript" src="~/signalr/hubs"></script>

    @RenderSection("scripts", required: false)

    <script>
        // 大圖
        $(document).on('click', '.info', function () {
            $('.PreviewImgModal').addClass('show');

            var $newimg = document.createElement('img');
            $newimg.style.opacity = "0";
            $newimg.onload = function () {
                $('.PreviewImgModal .loaded').addClass('fade-out');
                this.classList.add('fade-in', 'border');
                this.style.opacity = "1";
            };
            $newimg.setAttribute('src', $(this).siblings('img[data-org-src]').attr('data-org-src'));

            $('.PreviewImgModal .bottom p').text($(this).siblings('img[data-org-src]').attr('data-title'));
            $('.PreviewImgModal').append($newimg);

            wheelzoom(document.querySelector('.PreviewImgModal >  img:not(.loaded)'));
        });

        // 關閉大圖
        $('.PreviewImgModal .close').on('click', function () {
            $('.PreviewImgModal').removeClass('show');
            $('.PreviewImgModal img:not(.loaded)').remove();
            $('.PreviewImgModal .loaded').removeClass('fade-out').show();
        });

      
    </script>

</body>
</html>
